{
  "name": "personal-knowledge-base",
  "version": "1.0.0",
  "description": "RAG-powered personal knowledge base assistant with local LLM support",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "init:storage": "tsx scripts/init-storage.ts",
    "verify": "tsx scripts/verify-setup.ts"
  },
  "keywords": ["rag", "knowledge-base", "llm", "ollama", "vector-search"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "@prisma/client": "^5.7.1",
    "chromadb": "^1.7.3",
    "pdf-parse": "^1.1.1",
    "cheerio": "^1.0.0-rc.12",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/pdf-parse": "^1.1.4",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "vitest": "^1.0.4",
    "fast-check": "^3.15.0",
    "prisma": "^5.7.1"
  }
}
